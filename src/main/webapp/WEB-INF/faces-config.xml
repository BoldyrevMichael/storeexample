    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>testMB</from-outcome>
            <to-view-id>/productsMB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>productsCDI</from-outcome>
            <to-view-id>/productsCDI.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>productEdit</from-outcome>
            <to-view-id>/productEdit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
