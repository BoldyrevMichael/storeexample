<?xml version='1.0' encoding='UTF-8'?>
<faces-config
        version="2.1"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>exampleMB</from-outcome>
            <to-view-id>/exampleMB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>list-of-product-controller</from-outcome>
            <to-view-id>/listOfProductController.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>product-controller</from-outcome>
            <to-view-id>/productController.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>list-of-category-controller</from-outcome>
            <to-view-id>/listOfCategoryController.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>category-controller</from-outcome>
            <to-view-id>/categoryController.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
<!-- в комментарии один из способов конфигурирования бинов
        <managed-bean>
        <managed-bean-name>exampleMB</managed-bean-name>
        <managed-bean-class>ru.boldyrev.ma.storeexample.controller.ExampleMB<managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>-->
</faces-config>