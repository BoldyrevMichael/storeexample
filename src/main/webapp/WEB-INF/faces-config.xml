<?xml version='1.0' encoding='UTF-8'?>
<faces-config
        version="2.1"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>exampleMB</from-outcome>
            <to-view-id>/exampleMB.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>productsManager</from-outcome>
            <to-view-id>/productsManager.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>productManager</from-outcome>
            <to-view-id>/productManager.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>categoriesManager</from-outcome>
            <to-view-id>/categoriesManager.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>categoryManager</from-outcome>
            <to-view-id>/categoryManager.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
<!-- в комментарии один из способов конфигурирования бинов
        <managed-bean>
        <managed-bean-name>exampleMB</managed-bean-name>
        <managed-bean-class>ru.boldyrev_ma.storeexample.management.ExampleMB<managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>-->
</faces-config>